# Application Settings
# ==================
DEBUG=false  # Enable debug mode
ENVIRONMENT=local  # local, development, staging, production
API_URL=/api  # API endpoint prefix

# CORS Settings
# ============
ALLOWED_CORS_ORIGINS=["http://localhost:3000"]  # List of allowed CORS origins

# Database Settings
# ================
DATABASE__HOST=relay_db  # Database host
DATABASE__USER=relay_user  # Database user
DATABASE__PASSWORD=relay_super_secret_password  # Database password
DATABASE__DB=relay_db  # Database name
DATABASE__PORT=5432  # Database port

# Redis Settings
# =============
REDIS__HOST=cache  # Redis host
REDIS__PORT=6379  # Redis port
REDIS__DB=0  # Redis database number

# Service Ports
# ============
RELAY_PORT=8000  # Relay API port
REDIS_INSIGHT_PORT=5540  # Redis Insight UI port

# Monitoring
# =========
SENTRY_DSN=  # Optional: Sentry DSN for error tracking
